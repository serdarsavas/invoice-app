<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/add-invoice.css">

</head>
<%- include('../includes/navigation.ejs') %>
<body class="preload">
   
  <main class="form-wrapper">
    <% if (validationErrors) { %>
      <% validationErrors.forEach(e => { %>
        <div class="error-message"><%= e.msg %></div>
      <% }) %>
    <% } %>
    <% if (successMessage) { %>
      <h2 class="success-message"><%= successMessage %></h2>
  <% } %>
    <h2 class="invoice-header">Mottagaruppgifter</h2>
    <% if (recipients.length > 0) { %>
    <form action="/admin/add-invoice/autofill" method="post" novalidate>
      <div class="select form-control">
        <select name="authority" id="authority">
          <% recipients.forEach(recipient => { %>
            <option value="<%= recipient.authority %>"> 
              <%= recipient.authority %>
            </option>
          <% }) %>
        </select>
      </div>
      <div class="form-control">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn" type="submit">Hämta uppgifter</button>
      </div>  
    </form>
    <% } %>
    
    
    <form method="post" id="invoiceForm">
      <div class="form-control">
        <label for="authority">Mottagare</label>
        <input
          class="<%= validationErrors.find(e => e.param === 'authority') ? 'invalid' : ''%>" 
          type= "text" 
          name="authority" 
          id="authority"
          <% if (recipient) { %>
            value="<%= recipient.authority %>"
          <% } else if (inputData) { %>
            value="<%= inputData.authority %>"
          <% } %>
          required/>
      </div>
      <div class="form-control">
        <label for="ref-person">Referensperson</label>
        <input 
          class="<%= validationErrors.find(e => e.param === 'refPerson') ? 'invalid' : ''%>"
          type="text" 
          name="refPerson" 
          id="ref-person"
          <% if (recipient) { %>
            value="<%= recipient.refPerson %>"
          <% } else if (inputData) { %>
            value="<%= inputData.refPerson %>"
          <% } %>
          required/>
      </div>
      <div class="form-control">
        <label for="street">Gatuaddress</label>
        <input 
          class="<%= validationErrors.find(e => e.param === 'street') ? 'invalid' : ''%>"
          type="text" 
          name="street" 
          id="street"
          <% if (recipient) { %>
            value="<%= recipient.street %>"
          <% } else if (inputData) { %>
            value="<%= inputData.street %>"
          <% } %>
          required/>
      </div>
      <div class="form-control">
        <label for="zip">Postkod</label>
        <input 
          class="<%= validationErrors.find(e => e.param === 'zip') ? 'invalid' : ''%>"
          type="text" 
          name="zip" 
          id="zip" 
          <% if (recipient) { %>
            value="<%= recipient.zip %>"
          <% } else if (inputData) { %>
            value="<%= inputData.zip %>"
          <% } %>
          required/>
      </div>
      <div class="form-control">
        <label for="city">Postort</label>
        <input 
          class="<%= validationErrors.find(e => e.param === 'city') ? 'invalid' : ''%>"
          type="text" 
          name="city" 
          id="city"
          <% if (recipient) { %>
            value="<%= recipient.city %>"
          <% } else if (inputData) { %>
            value="<%= inputData.city %>"
          <% } %>
          required/>
      </div>
   
      <h2 class="invoice-header">Kostnadsuppgifter</h2>
      <div class="form-control">
        <label for="invoice-number">Fakturanummer</label>
        <input 
          class="<%= validationErrors.find(e => e.param === 'invoiceNumber') ? 'invalid' : ''%>"
          type="number" 
          name="invoiceNumber" 
          id="invoice-number"
          <% if (inputData) { %>
            value="<%= inputData.invoiceNumber %>"
          <% } %>
          required/>
      </div>
      <div class="form-control">
        <label for="assignment-number">Uppdragsnummer</label>
        <input 
          class="<%= validationErrors.find(e => e.param === 'assignmentNumber') ? 'invalid' : ''%>"
          type="text" 
          name="assignmentNumber" 
          id="assignment-number"
          <% if (inputData) { %>
            value="<%= inputData.assignmentNumber %>"
          <% } %>
          required/>
      </div>

      <section class="invoice-rows" id="rows">
        <h3 class="row-header">(Rader på fakturan)</h3>
        <% if (inputData) { %>
          <% for (let i = 0; i < inputData.description.length; i++) { %>
            <div class="row">
                <div class="form-control">
                  <label for="description">Beskrivning</label>
                  <input
                    class="<%= validationErrors.find(e => e.param === 'description.') ? 'invalid' : ''%>" 
                    type="text" 
                    name="description[]" 
                    id="description"
                    value="<%= inputData.description[i] %>" 
                    required/>
                </div>
                <div class="form-control">
                  <label for="quantity">Antal</label>
                  <input
                    class="<%= validationErrors.find(e => e.param === 'quantity.') ? 'invalid' : ''%>"  
                    type="number" 
                    name="quantity[]" 
                    id="quantity"
                    value="<%= inputData.quantity[i] ? inputData.quantity[i] : '' %>" 
                    required/>
                </div>
                <div class="form-control">
                  <label for="unit">Enhet</label>
                  <input
                    class="<%= validationErrors.find(e => e.param === 'unit.') ? 'invalid' : ''%>" 
                    type="text" 
                    name="unit[]" 
                    id="unit"
                    value="<%= inputData.unit[i] ? inputData.unit[i] : '' %>" 
                    required/>
                </div>
                <div class="form-control">
                  <label for="price">Pris</label>
                  <input
                    class="<%= validationErrors.find(e => e.param === 'price.') ? 'invalid' : ''%>" 
                    type="number" 
                    name="price[]" 
                    id="price"
                    value="<%= inputData.price[i] ? inputData.price[i] : '' %>"
                    step=".01" 
                    required/>
                </div>
              </div>
            <% } %>
          <% } else { %>
            <div class="row">
              <div class="form-control">
                <label for="description">Beskrivning</label>
                <input
                  class="<%= validationErrors.find(e => e.param === 'description.') ? 'invalid' : ''%>" 
                  type="text" 
                  name="description[]" 
                  id="description" 
                  required/>
              </div>
              <div class="form-control">
                <label for="quantity">Antal </label>
                <input
                  class="<%= validationErrors.find(e => e.param === 'quantity.') ? 'invalid' : ''%>" 
                  type="number" 
                  name="quantity[]" 
                  id="quantity" 
                  step=".01" 
                  required/>
              </div>
              <div class="form-control">
                <label for="unit">Enhet</label>
                <input
                  class="<%= validationErrors.find(e => e.param === 'unit.') ? 'invalid' : ''%>" 
                  type="text" 
                  name="unit[]" 
                  id="unit"
                  required/>
              </div>
              <div class="form-control">
                <label for="price">Pris</label>
                <input 
                  class="<%= validationErrors.find(e => e.param === 'price.') ? 'invalid' : ''%>"
                  type="number" 
                  name="price[]" 
                  id="price" 
                  step=".01"
                  required/>
              </div>
            </div>
          <% } %>
        </section>
        <div class="add-row" id="add-row">
          <i class="fas fa-plus"><span>Ny rad</span></i>
        </div>
        <button formaction="/admin/save-invoice" class="btn" type="submit" id="submitBtn">Spara faktura</button>
        <button formaction="/admin/add-invoice" class="btn" type="submit" id="submitBtn">Spara och skicka pdf till min epost</button>
        <a class="btn" href="/admin/invoices">Avbryt</a>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"> 
        <input type="hidden" name="invoiceId" value="<%= invoiceId %>"> 
      </form>
  </main>

  <script src="/js/add-invoice.js"></script>
<%- include('../includes/end.ejs') %>
