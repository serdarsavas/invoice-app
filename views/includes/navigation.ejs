<header class="main-header">
    <nav class="main-header__nav">
       
        <% if (isAuthenticated) { %>
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <a class="<%= path === '/start' ? 'active' : '' %>" href="/start">Hem</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/new' ? 'active' : '' %>" href="/invoice/new">Ny faktura</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/invoices' ? 'active' : '' %>" href="/invoices">Gamla fakturor</a>
                </li>
            </ul>
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <button type="submit">Logga ut</button>
                    </form>
                </li>
            </ul>
        <%  } else { %>
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <a class="<%= path === '/' ? 'active' : '' %>" href="/">Hem</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Logga in</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Registrering</a>
                </li>
            </ul>
        <% } %>
        
    </nav>
</header>

