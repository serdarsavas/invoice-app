<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/invoices.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (invoices.length > 0) { %>
                    <input type="text" class="invoice-filter" id="filter" placeholder="Sök på titel eller datum (ÅÅ-MM-DD)" />
                    <div class="grid">
                        <% invoices.forEach(invoice => { %>
                            <article class="card invoice-item">
                                <header class="card__header">
                                    <h1 class="invoice__title">
                                        <%= invoice.recipient.authority %>
                                    </h1>
                                    <p class="invoice__date">
                                        <%= invoice.createdAt.toISOString().substring(0, 10) %>
                                    </p>
                                </header>
                                <div class="card__content">
                                    <h2 class="invoice__total">
                                        <%= invoice.totalAfterVAT %> kr
                                    </h2>
                                    <p class="invoice__number">
                                        Fakturanr: <%= invoice.invoiceNumber %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <form action="/invoice/delete" method="POST" class="delete">
                                        <input type="hidden" name="invoiceId" value="<%= invoice._id %>">
                                        <button class="delete-btn" type="submit">X</button>
                                    </form>
                                    <a href="/invoice/view/<%= invoice._id %>" class="btn" target="_blank">Se faktura</a>
                                    <a href="/invoice/download/<%= invoice._id %>" class="btn">Ladda ner</a>
                                    <a href="/invoice/edit/<%= invoice._id %>" class="btn">Redigera</a>
                                </div>
                            </article>
                        <% }) %>
                    </div>
                    <% } else { %>
                        <h1>Inga gamla fakturor!</h1>
                    <% } %>
            </main>
            <% if (invoices.length > 0) { %>
                <script src="/js/invoices.js"></script>
            <% } %>
            <%- include('../includes/end.ejs') %>